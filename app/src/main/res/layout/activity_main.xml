<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_horizontal">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:textColor="@android:color/holo_green_light"
            android:text="VdoCipher Sample Application"/>
    <LinearLayout
            android:id="@+id/progress_modal"
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ProgressBar
                android:indeterminate="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">
        <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Online Playback"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:onClick="onlinePlayback"/>
        <Button
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Downloads"
                android:textSize="16sp"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:onClick="downloads"/>
    </LinearLayout>
    <LinearLayout
            android:gravity="bottom|center"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/library_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:text=""
                tools:hint="VdoCipher sdk version: a.b.c"/>
    </LinearLayout>
</LinearLayout>